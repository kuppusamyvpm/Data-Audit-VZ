	@GetMapping("/ccabs")
    @CrossOrigin(origins="http://localhost:4200")
	public List<charge>fetchbyuserList() 
	{
	 List<charge> a=new ArrayList<charge>();
	 a=cs.fetchbyuserList();
	 return a;
	}
	
	
	
